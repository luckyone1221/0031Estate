mixin charLi(icon, val)
	+e.chars-li
		+icon(icon)
		span=val

mixin prodCardSlide(imgNum)
	.swiper-slide
		+e.slide-link(href=`img/@2x/prod-img-${imgNum}.jpg` data-fancybox="prodImgs")
			img.swiper-lazy(src='#' data-src=`img/@2x/prod-img-${imgNum}.jpg`)