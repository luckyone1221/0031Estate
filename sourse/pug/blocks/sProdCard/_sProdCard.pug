			block
			+e.top-line
				+b.section-title
					h1 Дом в послелке Успенка-21
					p (27 км, ID 744)
				+e.chosen-btn
					span Добавить в избранное
					+icon('star')
		+e.slider
			.swiper-container.prod-card-slider-js
				.swiper-wrapper
					+prodCardSlide(1)
